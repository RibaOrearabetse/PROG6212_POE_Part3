@model IEnumerable<Contract_Monthly_Claim_System__CMCS_.Models.Approval>
@using System.Linq
@using System.Collections.Generic
@{
    ViewData["Title"] = "Approvals";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-clipboard-check me-2 text-primary"></i>
                        Claim Approvals
                    </h2>
                    <p class="text-muted mb-0">View and manage approval records</p>
                </div>
                <div class="badge bg-primary fs-6">
                    <i class="fas fa-list me-1"></i>
                    @Model.Count() Approvals
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<div class="card shadow-lg mb-4" style="border: 2px solid #198754 !important;">
    <div class="card-header text-white" style="background-color: #198754 !important; padding: 15px !important;">
        <h5 class="mb-0 fw-bold">
            <i class="fas fa-clipboard-check me-2"></i>
            Approval Records
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped mb-0">
                <thead style="background-color: #d1e7dd !important;">
            <tr>
                <th>Approval ID</th>
                <th>Approval Date</th>
                <th>Comments</th>
                <th>Claim ID</th>
                <th>Approver ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                // Get all claims to verify status - always get fresh data
                var allClaims = Contract_Monthly_Claim_System__CMCS_.Controllers.ClaimController.GetAllClaims();
                var approvedClaimIds = allClaims?
                .Where(c => c != null &&
                !string.IsNullOrEmpty(c.ClaimStatus) &&
                c.ClaimStatus.Trim().Equals("Approved", System.StringComparison.OrdinalIgnoreCase))
                .Select(c => c.ClaimID)
                .ToHashSet() ?? new System.Collections.Generic.HashSet<int>();

                // Filter model to only include approvals for approved claims
                var filteredApprovals = Model
                .Where(a => a != null &&
                a.ApprovalID > 0 &&
                a.ClaimID > 0 &&
                a.ApprovalDate.Year > 2000 &&
                approvedClaimIds.Contains(a.ClaimID))
                .ToList();

                if (filteredApprovals.Any())
                {
                    foreach (var item in filteredApprovals)
                    {
                        <tr>
                            <td>@item.ApprovalID</td>
                            <td>@item.ApprovalDate.ToShortDateString()</td>
                            <td>@(item.Comments ?? "No comments")</td>
                            <td>@item.ClaimID</td>
                            <td>@item.ApproverID</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.ApprovalID" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye me-1"></i>
                                        Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ApprovalID" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit me-1"></i>
                                        Modify
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No approvals found for approved claims.</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No approvals found.</td>
                </tr>
            }
        </tbody>
            </table>
        </div>
    </div>
</div>