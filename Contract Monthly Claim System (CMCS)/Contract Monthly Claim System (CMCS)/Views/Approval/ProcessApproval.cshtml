@model Contract_Monthly_Claim_System__CMCS_.Models.Claim
@{
    ViewData["Title"] = "Review Claim Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-search me-2 text-primary"></i>
                        Review Claim Details
                    </h2>
                    <p class="text-muted mb-0">Detailed information for claim verification and approval</p>
                </div>
                <a asp-action="PendingClaims" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Back to Pending Claims
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-file-invoice me-2"></i>
                        Claim #@Model.ClaimID - Detailed Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="border rounded p-3 h-100">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-calendar me-2"></i>
                                    Date Information
                                </h6>
                                <div class="mb-2">
                                    <small class="text-muted">Claim Date</small>
                                    <div class="fw-bold">@Model.ClaimDate.ToString("dddd, MMMM dd, yyyy")</div>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">Submission Date</small>
                                    <div class="fw-bold">@Model.SubmissionDate.ToString("dddd, MMMM dd, yyyy")</div>
                                </div>
                                <div>
                                    <small class="text-muted">Days Since Submission</small>
                                    <div class="fw-bold text-info">@((DateTime.Now - Model.SubmissionDate).Days) days ago</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="border rounded p-3 h-100">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-calculator me-2"></i>
                                    Financial Details
                                </h6>
                                <div class="mb-2">
                                    <small class="text-muted">Hours Worked</small>
                                    <div class="fw-bold">@Model.HoursWorked hours</div>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">Hourly Rate</small>
                                    <div class="fw-bold">R @Model.HourlyRate.ToString("N2")</div>
                                </div>
                                <div>
                                    <small class="text-muted">Total Amount</small>
                                    <div class="h5 text-success fw-bold">R @Model.TotalAmount.ToString("N2")</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="border rounded p-3 h-100">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-user me-2"></i>
                                    User Information
                                </h6>
                                <div class="mb-2">
                                    <small class="text-muted">User ID</small>
                                    <div class="fw-bold">@Model.UserID</div>
                                </div>
                                <div>
                                    <small class="text-muted">Status</small>
                                    <div>
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-clock me-1"></i>
                                            @Model.ClaimStatus
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="border rounded p-3 h-100">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-sticky-note me-2"></i>
                                    Additional Notes
                                </h6>
                                @if (!string.IsNullOrEmpty(Model.Notes))
                                {
                                    <div class="text-muted">@Model.Notes</div>
                                }
                                else
                                {
                                    <div class="text-muted fst-italic">No additional notes provided</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-gavel me-2"></i>
                        Approval Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <button type="button" class="btn btn-success btn-lg"
                                onclick="approveClaim(@Model.ClaimID, 'R @Model.TotalAmount.ToString("N2")')">
                            <i class="fas fa-check me-2"></i>
                            Approve Claim
                        </button>

                        <button type="button" class="btn btn-danger btn-lg"
                                onclick="rejectClaim(@Model.ClaimID, 'R @Model.TotalAmount.ToString("N2")')">
                            <i class="fas fa-times me-2"></i>
                            Reject Claim
                        </button>

                        <a asp-action="PendingClaims" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to Pending Claims
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden form for anti-forgery token -->
<form style="display: none;">
    @Html.AntiForgeryToken()
</form>

<!-- Approval Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1" aria-labelledby="approvalModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="approvalModalLabel">
                    <i class="fas fa-check-circle me-2"></i>
                    Approve Claim #@Model.ClaimID
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="approvalForm" method="post">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        You are about to approve this claim for <strong>R @Model.TotalAmount.ToString("N2")</strong>. Please add any comments below.
                    </div>
                    <div class="mb-3">
                        <label for="approvalComments" class="form-label">Comments (Optional)</label>
                        <textarea class="form-control" id="approvalComments" name="comments" rows="3"
                                  placeholder="Add any comments about this approval..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-1"></i>
                        Approve Claim
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Rejection Modal -->
<div class="modal fade" id="rejectionModal" tabindex="-1" aria-labelledby="rejectionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="rejectionModalLabel">
                    <i class="fas fa-times-circle me-2"></i>
                    Reject Claim #@Model.ClaimID
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="rejectionForm" method="post">
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        You are about to reject this claim for <strong>R @Model.TotalAmount.ToString("N2")</strong>. Please provide a reason for rejection.
                    </div>
                    <div class="mb-3">
                        <label for="rejectionComments" class="form-label">Reason for Rejection <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="rejectionComments" name="comments" rows="3" required
                                  placeholder="Please explain why this claim is being rejected..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times me-1"></i>
                        Reject Claim
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function approveClaim(claimId, amount) {
            console.log(`approveClaim called: claimId=${claimId}, amount=${amount}`);

            if (confirm(`Are you sure you want to approve Claim #${claimId} for ${amount}?`)) {
                // Update status badge immediately
                const statusBadge = document.querySelector('.badge');
                if (statusBadge) {
                    statusBadge.className = 'badge bg-success';
                    statusBadge.innerHTML = '<i class="fas fa-check me-1"></i>Approved';
                }

                // Update action buttons
                const actionButtons = document.querySelector('.card-body .d-grid');
                if (actionButtons) {
                    actionButtons.innerHTML = `
                        <div class="text-success text-center py-3">
                            <i class="fas fa-check-circle fa-2x mb-2"></i>
                            <div class="h5">Claim Approved</div>
                            <small class="text-muted">This claim has been successfully approved</small>
                        </div>
                        <a asp-action="PendingClaims" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to Pending Claims
                        </a>
                    `;
                }

                // Make AJAX call
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                fetch(`/Approval/ApproveClaim?claimId=${claimId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    }
                })
                .then(response => response.json())
                .then(data => {
                    console.log('Approval response:', data);
                    if (data.success) {
                        showSuccessMessage(`Claim #${claimId} approved successfully!`);
                    } else {
                        showErrorMessage(data.message || 'Failed to approve claim');
                        // Revert UI changes
                        if (statusBadge) {
                            statusBadge.className = 'badge bg-warning text-dark';
                            statusBadge.innerHTML = '<i class="fas fa-clock me-1"></i>Pending';
                        }
                    }
                })
                .catch(error => {
                    console.error('Error approving claim:', error);
                    showErrorMessage('Error approving claim');
                    // Revert UI changes
                    if (statusBadge) {
                        statusBadge.className = 'badge bg-warning text-dark';
                        statusBadge.innerHTML = '<i class="fas fa-clock me-1"></i>Pending';
                    }
                });
            }
        }

        function rejectClaim(claimId, amount) {
            console.log(`rejectClaim called: claimId=${claimId}, amount=${amount}`);

            const reason = prompt(`Please provide a reason for rejecting Claim #${claimId} for ${amount}:`);
            if (reason === null) return; // User cancelled

            if (reason.trim() === '') {
                alert('Please provide a reason for rejection');
                return;
            }

            // Update status badge immediately
            const statusBadge = document.querySelector('.badge');
            if (statusBadge) {
                statusBadge.className = 'badge bg-danger';
                statusBadge.innerHTML = '<i class="fas fa-times me-1"></i>Rejected';
            }

            // Update action buttons
            const actionButtons = document.querySelector('.card-body .d-grid');
            if (actionButtons) {
                actionButtons.innerHTML = `
                    <div class="text-danger text-center py-3">
                        <i class="fas fa-times-circle fa-2x mb-2"></i>
                        <div class="h5">Claim Rejected</div>
                        <small class="text-muted">This claim has been rejected</small>
                    </div>
                    <a asp-action="PendingClaims" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Back to Pending Claims
                    </a>
                `;
            }

            // Make AJAX call
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            fetch(`/Approval/RejectClaim?claimId=${claimId}&comments=${encodeURIComponent(reason)}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                }
            })
            .then(response => response.json())
            .then(data => {
                console.log('Rejection response:', data);
                if (data.success) {
                    showSuccessMessage(`Claim #${claimId} rejected successfully!`);
                } else {
                    showErrorMessage(data.message || 'Failed to reject claim');
                    // Revert UI changes
                    if (statusBadge) {
                        statusBadge.className = 'badge bg-warning text-dark';
                        statusBadge.innerHTML = '<i class="fas fa-clock me-1"></i>Pending';
                    }
                }
            })
            .catch(error => {
                console.error('Error rejecting claim:', error);
                showErrorMessage('Error rejecting claim');
                // Revert UI changes
                if (statusBadge) {
                    statusBadge.className = 'badge bg-warning text-dark';
                    statusBadge.innerHTML = '<i class="fas fa-clock me-1"></i>Pending';
                }
            });
        }

        function showSuccessMessage(message) {
            // Create or update success alert
            let alertDiv = document.querySelector('.alert-success');
            if (!alertDiv) {
                alertDiv = document.createElement('div');
                alertDiv.className = 'alert alert-success alert-dismissible fade show';
                alertDiv.innerHTML = `
                    <i class="fas fa-check-circle me-2"></i>
                    <span class="alert-message">${message}</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.querySelector('.container-fluid').insertBefore(alertDiv, document.querySelector('.container-fluid').firstChild);
            } else {
                alertDiv.querySelector('.alert-message').textContent = message;
            }
        }

        function showErrorMessage(message) {
            // Create or update error alert
            let alertDiv = document.querySelector('.alert-danger');
            if (!alertDiv) {
                alertDiv = document.createElement('div');
                alertDiv.className = 'alert alert-danger alert-dismissible fade show';
                alertDiv.innerHTML = `
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <span class="alert-message">${message}</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.querySelector('.container-fluid').insertBefore(alertDiv, document.querySelector('.container-fluid').firstChild);
            } else {
                alertDiv.querySelector('.alert-message').textContent = message;
            }
        }
    </script>
}