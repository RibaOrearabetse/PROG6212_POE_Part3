@model Contract_Monthly_Claim_System__CMCS_.Models.ClaimCreateViewModel
@{
    ViewData["Title"] = "Submit New Claim";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="fas fa-file-invoice-dollar me-2"></i>
                        Submit New Claim
                    </h2>
                    <p class="mb-0 mt-2 text-light">Fill in your claim details below</p>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create" method="post" id="claimForm" novalidate>
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="HoursWorked" class="form-label fw-bold">
                                    <i class="fas fa-clock me-1 text-primary"></i>
                                    Hours Worked
                                </label>
                                <input asp-for="HoursWorked" type="number" step="0.1" min="0" max="168"
                                       class="form-control form-control-lg"
                                       placeholder="Enter hours worked"
                                       id="hoursWorked" required>
                                <span asp-validation-for="HoursWorked" class="text-danger"></span>
                                <div class="form-text">Enter the total hours worked (0-168)</div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="HourlyRate" class="form-label fw-bold">
                                    <i class="fas fa-rand me-1 text-primary"></i>
                                    Hourly Rate (ZAR)
                                </label>
                                <input asp-for="HourlyRate" type="number" step="0.01" min="0"
                                       class="form-control form-control-lg"
                                       placeholder="Enter hourly rate"
                                       id="hourlyRate" required>
                                <span asp-validation-for="HourlyRate" class="text-danger"></span>
                                <div class="form-text">Enter your hourly rate in South African Rand</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="UserID" class="form-label fw-bold">
                                    <i class="fas fa-user me-1 text-primary"></i>
                                    User <span class="text-danger">*</span>
                                </label>
                                <select asp-for="UserID" class="form-select form-control-lg" required>
                                    <option value="">-- Select User --</option>
                                    @if (ViewBag.Users != null)
                                    {
                                        foreach (var user in ViewBag.Users)
                                        {
                                            <option value="@user.Value" selected="@user.Selected">@user.Text</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="UserID" class="text-danger"></span>
                                <div class="form-text">Select the user this claim belongs to</div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="ClaimDate" class="form-label fw-bold">
                                    <i class="fas fa-calendar me-1 text-primary"></i>
                                    Claim Date
                                </label>
                                <input asp-for="ClaimDate" type="date"
                                       class="form-control form-control-lg"
                                       value="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                                <span asp-validation-for="ClaimDate" class="text-danger"></span>
                                <div class="form-text">Select the date for this claim</div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label for="TotalAmount" class="form-label fw-bold">
                                    <i class="fas fa-calculator me-1 text-primary"></i>
                                    Total Amount (ZAR)
                                </label>
                                <input type="text" class="form-control form-control-lg bg-light"
                                       id="totalAmount" readonly>
                                <div class="form-text">Automatically calculated</div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label fw-bold">
                                <i class="fas fa-sticky-note me-1 text-primary"></i>
                                Additional Notes (Optional)
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="4"
                                      placeholder="Add any additional notes or comments about your claim..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                            <div class="form-text">Include any relevant details about your work</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5" id="submitBtn">
                                <i class="fas fa-paper-plane me-2"></i>
                                Submit Claim
                            </button>
                        </div>

                        <div class="mt-4 pt-4 border-top">
                            <div class="text-center">
                                <p class="text-muted mb-3">
                                    <i class="fas fa-info-circle me-1"></i>
                                    After submitting your claim, you can upload supporting documents
                                </p>
                                <div id="uploadSection" style="display: none;">
                                    <a href="#" class="btn btn-outline-primary" id="uploadDocumentsBtn">
                                        <i class="fas fa-upload me-2"></i>
                                        Upload Supporting Documents
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const hoursInput = document.getElementById('hoursWorked');
            const rateInput = document.getElementById('hourlyRate');
            const totalInput = document.getElementById('totalAmount');
            const submitBtn = document.getElementById('submitBtn');

            function calculateTotal() {
                const hours = parseFloat(hoursInput.value) || 0;
                const rate = parseFloat(rateInput.value) || 0;
                const total = hours * rate;

                if (total > 0) {
                    totalInput.value = 'R ' + total.toFixed(2);
                } else {
                    totalInput.value = '';
                }
            }

            function validateForm() {
                const hours = parseFloat(hoursInput.value) || 0;
                const rate = parseFloat(rateInput.value) || 0;

                // Always allow submission, let server-side validation handle it
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Submit Claim';
            }

            hoursInput.addEventListener('input', function() {
                calculateTotal();
                validateForm();
            });

            rateInput.addEventListener('input', function() {
                calculateTotal();
                validateForm();
            });

            // Initial validation
            validateForm();

                    // Add form submission debugging
                    document.getElementById('claimForm').addEventListener('submit', function(e) {
                        console.log('Form submission attempted');
                        console.log('Hours:', hoursInput.value);
                        console.log('Rate:', rateInput.value);
                        console.log('Date:', document.querySelector('input[name="ClaimDate"]').value);
                        console.log('Notes:', document.querySelector('textarea[name="Notes"]').value);
                    });

                    // Handle upload documents button
                    document.getElementById('uploadDocumentsBtn').addEventListener('click', function(e) {
                        e.preventDefault();
                        const newClaimId = '@TempData["NewClaimId"]';
                        if (newClaimId) {
                            window.location.href = `/SupportingDocument/Upload?claimId=${newClaimId}`;
                        } else {
                            alert('Please submit your claim first before uploading documents.');
                        }
                    });
        });
    </script>
}

