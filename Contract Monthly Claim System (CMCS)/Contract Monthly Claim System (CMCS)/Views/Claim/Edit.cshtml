@model Contract_Monthly_Claim_System__CMCS_.Models.Claim
@{
    ViewData["Title"] = "Edit Claim";
}

<h2>Edit Claim</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ClaimID" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ClaimDate" class="form-label">Claim Date</label>
                        <input asp-for="ClaimDate" type="date" class="form-control" required>
                        <span asp-validation-for="ClaimDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="HoursWorked" class="form-label">Hours Worked</label>
                        <input asp-for="HoursWorked" type="number" step="0.1" min="0.1" max="168" class="form-control" id="editHoursWorked" required>
                        <span asp-validation-for="HoursWorked" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="HourlyRate" class="form-label">Hourly Rate (ZAR)</label>
                        <input asp-for="HourlyRate" type="number" step="0.01" min="0.01" class="form-control" id="editHourlyRate" required>
                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="TotalAmount" class="form-label">Total Amount (ZAR)</label>
                        <input asp-for="TotalAmount" type="number" step="0.01" class="form-control" id="editTotalAmount" readonly>
                        <small class="form-text text-muted">Calculated automatically</small>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ClaimStatus" class="form-label">Status</label>
                <select asp-for="ClaimStatus" class="form-select">
                    <option value="Pending">Pending</option>
                    <option value="Submitted">Submitted</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>
                <span asp-validation-for="ClaimStatus" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="form-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update Claim</button>
                <a asp-action="Details" asp-route-id="@Model.ClaimID" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-calculate total amount when hours or rate changes
        document.getElementById('editHoursWorked').addEventListener('input', calculateTotal);
        document.getElementById('editHourlyRate').addEventListener('input', calculateTotal);

        function calculateTotal() {
            const hours = parseFloat(document.getElementById('editHoursWorked').value) || 0;
            const rate = parseFloat(document.getElementById('editHourlyRate').value) || 0;
            const total = hours * rate;
            document.getElementById('editTotalAmount').value = total.toFixed(2);
        }

        // Calculate on page load
        calculateTotal();
    </script>
}
