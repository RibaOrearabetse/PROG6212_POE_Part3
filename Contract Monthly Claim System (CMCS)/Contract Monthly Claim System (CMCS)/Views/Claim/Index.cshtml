@model IEnumerable<Contract_Monthly_Claim_System__CMCS_.Models.Claim>
@{
    ViewData["Title"] = "Claims";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-file-invoice-dollar me-2 text-primary"></i>
                        Claims Management
                    </h2>
                    <p class="text-muted mb-0">View and manage your submitted claims</p>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>
                    Submit New Claim
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            @if (TempData["NewClaimId"] != null)
            {
                <div class="mt-2">
                    <a asp-controller="SupportingDocument" asp-action="Upload" asp-route-claimId="@TempData["NewClaimId"]" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-upload me-1"></i>
                        Upload Supporting Documents
                    </a>
                </div>
            }
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<script>
    function confirmDelete(claimId) {
        if (confirm('Are you sure you want to delete this claim? (This is a demo; no data will be deleted)')) {
            alert('Delete request received for Claim ID: ' + claimId + '. In a real application, this would delete the record.');
        }
    }
</script>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Claim Date</th>
                <th>Status</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Amount</th>
                <th>Submission Date</th>
                <th>User ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    // Only display valid claims (filter out corrupted ones)
                    @if (item.ClaimID > 0 && item.ClaimDate.Year > 2000 && item.HoursWorked > 0 && item.HourlyRate > 0)
                    {
                        <tr>
                            <td>@item.ClaimID</td>
                            <td>@item.ClaimDate.ToShortDateString()</td>
                            <td>
                                <span class="badge @item.StatusBadgeClass">
                                    @item.StatusDisplayName
                                </span>
                                @if (!string.IsNullOrEmpty(item.StatusNotes))
                                {
                                    <div class="small text-muted mt-1">@item.StatusNotes</div>
                                }
                            </td>
                            <td>@item.HoursWorked</td>
                            <td>@item.HourlyRate.ToString("C")</td>
                            <td>@item.TotalAmount.ToString("C")</td>
                            <td>@item.SubmissionDate.ToShortDateString()</td>
                            <td>@item.UserID</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Tracking" asp-action="Details" asp-route-id="@item.ClaimID" class="btn btn-primary btn-sm">
                                        <i class="fas fa-search me-1"></i>Track
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ClaimID" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye me-1"></i>View
                                    </a>
                                    @if (item.ClaimStatus == "Pending")
                                    {
                                        <a asp-controller="Approval" asp-action="ProcessApproval" asp-route-claimId="@item.ClaimID" class="btn btn-success btn-sm">
                                            <i class="fas fa-check me-1"></i>Review
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                @if (!Model.Any(c => c.ClaimID > 0 && c.ClaimDate.Year > 2000 && c.HoursWorked > 0 && c.HourlyRate > 0))
                {
                    <tr>
                        <td colspan="9" class="text-center">No valid claims found.</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center">No claims found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>