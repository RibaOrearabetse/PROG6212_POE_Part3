@model IEnumerable<Contract_Monthly_Claim_System__CMCS_.Models.SupportingDocument>
@{
    ViewData["Title"] = "Supporting Documents";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-file-upload me-2 text-primary"></i>
                        Supporting Documents
                    </h2>
                    <p class="text-muted mb-0">Manage and view all uploaded supporting documents</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-controller="Claim" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Back to Claims
                    </a>
                    <a asp-action="Upload" class="btn btn-primary">
                        <i class="fas fa-upload me-1"></i>
                        Upload Document
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            @TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var document in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-lg h-100" style="border: 2px solid #0dcaf0 !important;">
                        <div class="card-header text-white" style="background-color: #0dcaf0 !important; padding: 12px !important;">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0 fw-bold text-white text-truncate" title="@document.FileName">
                                    <i class="fas fa-file me-2"></i>
                                    @document.FileName
                                </h6>
                                <span class="badge bg-light text-dark">
                                    @(document.ClaimID > 0 ? $"Claim #{document.ClaimID}" : "Unassigned")
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted">File Size</small>
                                    <div class="fw-bold">@((document.FileSize / 1024.0).ToString("F1")) KB</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Uploaded</small>
                                    <div class="fw-bold">@document.UploadDate.ToString("dd MMM yyyy")</div>
                                </div>
                            </div>

                            <div class="mb-2">
                                <small class="text-muted">Content Type</small>
                                <div class="fw-bold text-truncate">@document.ContentType</div>
                            </div>

                            <div>
                                <small class="text-muted">File Path</small>
                                <div class="text-truncate small text-muted" title="@document.FilePath">@document.FilePath</div>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Details" asp-route-id="@document.DocumentID" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-eye me-1"></i>
                                    Details
                                </a>
                                <a asp-action="Download" asp-route-id="@document.DocumentID" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-download me-1"></i>
                                    Download
                                </a>
                                <form asp-action="Delete" asp-route-id="@document.DocumentID" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete \"@document.FileName\"?');">
                                        <i class="fas fa-trash me-1"></i>
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-folder-open text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-muted">No Documents Found</h4>
            <p class="text-muted">Upload supporting documents to keep track of claim evidence.</p>
            <a asp-action="Upload" class="btn btn-primary">
                <i class="fas fa-upload me-1"></i>
                Upload Document
            </a>
        </div>
    }
</div>

<script>
    function confirmDelete(documentId, fileName) {
        return confirm('Are you sure you want to delete the document "' + fileName + '"?');
    }
</script>