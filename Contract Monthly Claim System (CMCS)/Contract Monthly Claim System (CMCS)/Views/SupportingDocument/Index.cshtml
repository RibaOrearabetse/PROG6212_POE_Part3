@model IEnumerable<Contract_Monthly_Claim_System__CMCS_.Models.SupportingDocument>
@{
    ViewData["Title"] = "Supporting Documents";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-file-upload me-2 text-primary"></i>
                        Supporting Documents
                    </h2>
                    <p class="text-muted mb-0">Manage and view all uploaded supporting documents</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-controller="Claim" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Back to Claims
                    </a>
                    <a asp-action="Upload" class="btn btn-primary">
                        <i class="fas fa-upload me-1"></i>
                        Upload Document
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var document in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0 text-primary">
                                    <i class="fas fa-file me-2"></i>
                                    @document.FileName
                                </h6>
                                <span class="badge bg-info">Claim #@document.ClaimID</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted">File Size</small>
                                    <div class="fw-bold">@((document.FileSize / 1024.0).ToString("F1")) KB</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Upload Date</small>
                                    <div class="fw-bold">@document.UploadDate.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted">Content Type</small>
                                <div class="fw-bold">@document.ContentType</div>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted">File Path</small>
                                <div class="text-truncate small text-muted">@document.FilePath</div>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Details" asp-route-id="@document.DocumentID" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-eye me-1"></i>
                                    View
                                </a>
                                <button type="button" class="btn btn-outline-success btn-sm" onclick="simulateDownload(@document.DocumentID, '@document.FileName')">
                                    <i class="fas fa-download me-1"></i>
                                    Download
                                </button>
                                <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmDelete(@document.DocumentID, '@document.FileName')">
                                    <i class="fas fa-trash me-1"></i>
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-folder-open text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-muted">No Documents Found</h4>
            <p class="text-muted">Upload your first supporting document to get started.</p>
            <a asp-action="Upload" class="btn btn-primary">
                <i class="fas fa-upload me-1"></i>
                Upload Document
            </a>
        </div>
    }
</div>

<script>
    function simulateDownload(documentId, fileName) {
        alert('Download request received for Document ID: ' + documentId + ' (' + fileName + '). In a real application, this would download the file.');
    }

    function confirmDelete(documentId, fileName) {
        if (confirm('Are you sure you want to delete the document "' + fileName + '"? (This is a demo; no data will be deleted)')) {
            alert('Delete request received for Document ID: ' + documentId + '. In a real application, this would delete the record.');
        }
    }
</script>