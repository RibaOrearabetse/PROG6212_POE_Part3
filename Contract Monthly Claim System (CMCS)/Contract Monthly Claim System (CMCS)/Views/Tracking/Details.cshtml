@model Contract_Monthly_Claim_System__CMCS_.Models.Claim
@{
    ViewData["Title"] = "Claim Tracking Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-search me-2 text-primary"></i>
                        Claim #@Model.ClaimID - Tracking Details
                    </h2>
                    <p class="text-muted mb-0">Detailed status tracking and progress information</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Back to Tracking
                    </a>
                    <button class="btn btn-outline-primary" onclick="refreshStatus()">
                        <i class="fas fa-sync-alt me-1"></i>
                        Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Claim Information -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-file-invoice me-2"></i>
                        Claim Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Claim Date</label>
                                <div class="h6">@Model.ClaimDate.ToString("dddd, MMMM dd, yyyy")</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Submission Date</label>
                                <div class="h6">@Model.SubmissionDate.ToString("dddd, MMMM dd, yyyy 'at' HH:mm")</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Hours Worked</label>
                                <div class="h6">@Model.HoursWorked hours</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Hourly Rate</label>
                                <div class="h6">R @Model.HourlyRate.ToString("N2")</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Total Amount</label>
                                <div class="h4 text-success">R @Model.TotalAmount.ToString("N2")</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">User ID</label>
                                <div class="h6">@Model.UserID</div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mt-3">
                            <label class="form-label fw-bold text-muted">Notes</label>
                            <div class="p-3 bg-light rounded">@Model.Notes</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Status History -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>
                        Status History
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Claim Submitted</h6>
                                <p class="text-muted mb-1">@Model.SubmissionDate.ToString("MMM dd, yyyy 'at' HH:mm")</p>
                                <p class="small">Your claim has been submitted and is awaiting review.</p>
                            </div>
                        </div>

                        @if (Model.ClaimStatus != "Pending")
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker @GetTimelineMarkerClass(Model.ClaimStatus)"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Status Updated</h6>
                                    <p class="text-muted mb-1">@(Model.LastUpdated?.ToString("MMM dd, yyyy 'at' HH:mm") ?? "Recently")</p>
                                    <p class="small">Status changed to: <span class="badge @Model.StatusBadgeClass">@Model.StatusDisplayName</span></p>
                                    @if (!string.IsNullOrEmpty(Model.StatusNotes))
                                    {
                                        <p class="small text-muted">@Model.StatusNotes</p>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Panel -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        Current Status
                    </h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <span class="badge @Model.StatusBadgeClass fs-6 px-3 py-2">
                            @Model.StatusDisplayName
                        </span>
                    </div>

                    <div class="mb-3">
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar @GetProgressBarClass(Model.ClaimStatus)"
                                 role="progressbar"
                                 style="width: @Model.StatusProgress%"
                                 aria-valuenow="@Model.StatusProgress"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                                @Model.StatusProgress%
                            </div>
                        </div>
                    </div>

                    <div class="small text-muted">
                        <i class="fas fa-clock me-1"></i>
                        Last updated: @GetTimeAgo(Model.LastUpdated ?? Model.SubmissionDate)
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>
                        Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="SupportingDocument" asp-action="Upload" asp-route-claimId="@Model.ClaimID" class="btn btn-outline-primary">
                            <i class="fas fa-upload me-1"></i>
                            Upload Documents
                        </a>

                        @if (Model.ClaimStatus == "Pending")
                        {
                            <button class="btn btn-outline-success" onclick="updateStatus(@Model.ClaimID, 'Approved')">
                                <i class="fas fa-check me-1"></i>
                                Mark as Approved
                            </button>
                            <button class="btn btn-outline-danger" onclick="updateStatus(@Model.ClaimID, 'Rejected')">
                                <i class="fas fa-times me-1"></i>
                                Mark as Rejected
                            </button>
                        }

                        <a asp-controller="Claim" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-1"></i>
                            View All Claims
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function refreshStatus() {
            location.reload();
        }

        function updateStatus(claimId, newStatus) {
            if (confirm(`Are you sure you want to change the status to ${newStatus}?`)) {
                fetch(`/Tracking/UpdateStatus?claimId=${claimId}&newStatus=${newStatus}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while updating the status.');
                });
            }
        }

        // Auto-refresh every 30 seconds
        setInterval(function() {
            if (document.visibilityState === 'visible') {
                location.reload();
            }
        }, 30000);
    </script>
}

@section Styles {
    <style>
        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 20px;
        }

        .timeline-marker {
            position: absolute;
            left: -35px;
            top: 5px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            border: 3px solid #fff;
            box-shadow: 0 0 0 3px #dee2e6;
        }

        .timeline-content {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            border-left: 3px solid #dee2e6;
        }

        .timeline-item:not(:last-child)::before {
            content: '';
            position: absolute;
            left: -29px;
            top: 17px;
            width: 2px;
            height: calc(100% + 20px);
            background: #dee2e6;
        }
    </style>
}

@functions {
    string GetTimelineMarkerClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "Processing" => "bg-info",
            "Completed" => "bg-primary",
            _ => "bg-warning"
        };
    }

    string GetProgressBarClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "Processing" => "bg-info",
            "Completed" => "bg-primary",
            _ => "bg-secondary"
        };
    }

    string GetTimeAgo(DateTime date)
    {
        var timeSpan = DateTime.Now - date;
        if (timeSpan.TotalDays >= 1)
            return $"{(int)timeSpan.TotalDays} days ago";
        if (timeSpan.TotalHours >= 1)
            return $"{(int)timeSpan.TotalHours} hours ago";
        if (timeSpan.TotalMinutes >= 1)
            return $"{(int)timeSpan.TotalMinutes} minutes ago";
        return "Just now";
    }
}
