@model Contract_Monthly_Claim_System__CMCS_.Models.User
@{
    ViewData["Title"] = "User Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-user me-2 text-primary"></i>
                        User Details
                    </h2>
                    <p class="text-muted mb-0">View user information and details</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Back to Users
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        @Model.FirstName @Model.LastName
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="border rounded p-3 h-100">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-id-card me-2"></i>
                                    Basic Information
                                </h6>
                                <div class="mb-2">
                                    <small class="text-muted">User ID</small>
                                    <div class="fw-bold">
                                        <span class="badge bg-secondary">@Model.UserID</span>
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">Full Name</small>
                                    <div class="fw-bold">@Model.FirstName @Model.LastName</div>
                                </div>
                                <div>
                                    <small class="text-muted">Email Address</small>
                                    <div class="fw-bold">
                                        <a href="mailto:@Model.Email" class="text-decoration-none">
                                            <i class="fas fa-envelope me-1"></i>
                                            @Model.Email
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="border rounded p-3 h-100">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-user-tag me-2"></i>
                                    Role & Contact
                                </h6>
                                <div class="mb-2">
                                    <small class="text-muted">Role</small>
                                    <div>
                                        @{
                                            var roleName = Model.RoleID switch
                                            {
                                                1 => "Lecturer",
                                                2 => "Coordinator",
                                                3 => "Manager",
                                                4 => "Administrator",
                                                _ => "Unknown"
                                            };
                                            var roleClass = Model.RoleID switch
                                            {
                                                1 => "bg-info",
                                                2 => "bg-warning",
                                                3 => "bg-success",
                                                4 => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @roleClass fs-6">@roleName</span>
                                    </div>
                                </div>
                                <div>
                                    <small class="text-muted">Contact Number</small>
                                    <div class="fw-bold">
                                        @if (!string.IsNullOrEmpty(Model.ContactNumber))
                                        {
                                            <i class="fas fa-phone me-1"></i>
                                            @Model.ContactNumber
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not provided</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs me-2"></i>
                        Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.UserID" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>
                            Edit User
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-1"></i>
                            Back to Users
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>