@model Contract_Monthly_Claim_System__CMCS_.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-user-edit me-2 text-warning"></i>
                        Edit User
                    </h2>
                    <p class="text-muted mb-0">Update user information</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Back to Users
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        Edit User Information
                    </h5>
                </div>
                <div class="card-body">
                    <form action="/User/EditPost/@Model.UserID" method="post" id="editUserForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="UserID" value="@Model.UserID" />
                        <div class="alert alert-danger" id="errorMessage" style="display: none;"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">First Name <span class="text-danger">*</span></label>
                                <input type="text" name="FirstName" id="firstName" class="form-control" value="@Model.FirstName" placeholder="Enter first name" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Last Name <span class="text-danger">*</span></label>
                                <input type="text" name="LastName" id="lastName" class="form-control" value="@Model.LastName" placeholder="Enter last name" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email Address <span class="text-danger">*</span></label>
                            <input type="email" name="Email" id="email" class="form-control" value="@Model.Email" placeholder="Enter email address" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contact Number</label>
                            <input type="tel" name="ContactNumber" id="contactNumber" class="form-control" value="@Model.ContactNumber" placeholder="Enter contact number" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Role <span class="text-danger">*</span></label>
                            <select name="RoleID" id="roleSelect" class="form-select" required>
                                <option value="">Select a role...</option>
                                @if (Model.RoleID == 1)
                                {
                                    <option value="1" selected>Lecturer</option>
                                }
                                else
                                {
                                    <option value="1">Lecturer</option>
                                }
                                @if (Model.RoleID == 2)
                                {
                                    <option value="2" selected>Coordinator</option>
                                }
                                else
                                {
                                    <option value="2">Coordinator</option>
                                }
                                @if (Model.RoleID == 3)
                                {
                                    <option value="3" selected>Manager</option>
                                }
                                else
                                {
                                    <option value="3">Manager</option>
                                }
                                @if (Model.RoleID == 4)
                                {
                                    <option value="4" selected>Administrator</option>
                                }
                                else
                                {
                                    <option value="4">Administrator</option>
                                }
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i>
                                Update User
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.UserID" class="btn btn-outline-info">
                                <i class="fas fa-eye me-1"></i>
                                View Details
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Current Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">User ID</small>
                        <div class="fw-bold">
                            <span class="badge bg-secondary">@Model.UserID</span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Full Name</small>
                        <div class="fw-bold">@Model.FirstName @Model.LastName</div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Email Address</small>
                        <div class="fw-bold text-break">@Model.Email</div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Contact Number</small>
                        <div class="fw-bold">
                            @if (!string.IsNullOrEmpty(Model.ContactNumber))
                            {
                                @Model.ContactNumber
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </div>
                    </div>
                    <div>
                        <small class="text-muted">Current Role</small>
                        <div>
                            @{
                                var roleName = Model.RoleID switch
                                {
                                    1 => "Lecturer",
                                    2 => "Coordinator",
                                    3 => "Manager",
                                    4 => "Administrator",
                                    _ => "Unknown"
                                };
                                var roleClass = Model.RoleID switch
                                {
                                    1 => "bg-info",
                                    2 => "bg-warning",
                                    3 => "bg-success",
                                    4 => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @roleClass fs-6">@roleName</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('editUserForm').addEventListener('submit', function(e) {
            const firstName = document.getElementById('firstName').value.trim();
            const lastName = document.getElementById('lastName').value.trim();
            const email = document.getElementById('email').value.trim();
            const roleId = document.getElementById('roleSelect').value;

            // Simple validation
            if (!firstName || !lastName || !email || !roleId) {
                e.preventDefault();
                document.getElementById('errorMessage').innerHTML = 'Please fill in all required fields.';
                document.getElementById('errorMessage').style.display = 'block';
                return false;
            }

            // Show loading state
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Updating User...';
            submitBtn.disabled = true;
        });
    </script>
}
