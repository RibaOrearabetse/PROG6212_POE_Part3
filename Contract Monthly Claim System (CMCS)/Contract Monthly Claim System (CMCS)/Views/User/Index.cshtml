@model IEnumerable<Contract_Monthly_Claim_System__CMCS_.Models.User>
@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-users me-2 text-primary"></i>
                        User Management
                    </h2>
                    <p class="text-muted mb-0">Manage system users and their roles</p>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-user-plus me-1"></i>
                    Create New User
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                All Users (@Model.Count())
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Hourly Rate</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-secondary">@user.UserID</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                            @if (!string.IsNullOrEmpty(user.FirstName))
                                            {
                                                @user.FirstName.Substring(0, 1).ToUpper()
                                            }
                                            else
                                            {
                                                <i class="fas fa-user"></i>
                                            }
                                        </div>
                                        <div>
                                            <div class="fw-bold">@user.FirstName @user.LastName</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="mailto:@user.Email" class="text-decoration-none">
                                        <i class="fas fa-envelope me-1"></i>
                                        @user.Email
                                    </a>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.ContactNumber))
                                    {
                                        <i class="fas fa-phone me-1"></i>
                                        @user.ContactNumber
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </td>
                                <td>
                                    @if (user.HourlyRate > 0)
                                    {
                                        <span class="fw-bold text-success">R @user.HourlyRate.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not set</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var roleName = user.RoleID switch
                                        {
                                            1 => "Lecturer",
                                            2 => "Coordinator",
                                            3 => "Manager",
                                            4 => "Administrator",
                                            _ => "Unknown"
                                        };
                                        var roleClass = user.RoleID switch
                                        {
                                            1 => "bg-info",
                                            2 => "bg-warning",
                                            3 => "bg-success",
                                            4 => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @roleClass">@roleName</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@user.UserID" class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye me-1"></i>
                                            View
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.UserID" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit me-1"></i>
                                            Edit
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>